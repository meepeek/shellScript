#! /bin/bash 

# Shell program to remove ppa launchpad repository added with add-apt-repository ufficial script#
# sudo add-apt-repository ppa:<repository_name>                                                 #
# sudo add-apt-repository ppa:<repository_name>/<subdirectory>                                  #
